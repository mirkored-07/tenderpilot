"use client";

import { useEffect } from "react";
import { useRouter } from "next/navigation";
import { supabaseBrowser } from "@/lib/supabase/browser";

export default function AuthCallback() {
  const router = useRouter();
  const supabase = supabaseBrowser();

  useEffect(() => {
    // This finalizes the auth session if the URL contains access tokens
    supabase.auth.getSession().then(() => {
      router.replace("/app");
    });
  }, [router, supabase]);

  return (
    <main className="min-h-screen premium-bg bg-background flex items-center justify-center p-6">
      <div className="text-sm text-muted-foreground">Signing you inâ€¦</div>
    </main>
  );
}
